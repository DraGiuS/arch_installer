setup_android_dev() { # {{
    print_info 'Your are going to set up an android selection of software for developing for this platform'
    read -p 'USER: ' USER
    install_aur_package 'android-sdk android-studio'
    install_aur_package 'genymotion unity-editor-beta-android'
    
    export ANDROID_HOME=/opt/android-sdk
    groupadd sdkusers
    gpasswd -a "$USER" sdkusers
    chown -R :sdkusers /opt/android-sdk/
    chmod -R g+w /opt/android-sdk/
    $ANDROID_HOME/tools/bin/sdkmanager --licenses
    su - "$USER" -c "export ANDROID_HOME=/opt/android-sdk"
    su - "$USER" -c "$ANDROID_HOME/tools/bin/sdkmanager --licenses"
     
          enter_to_continue
}	  
