	        cp /root/arch_installer/pacman.conf /etc/pacman.conf
                pacman-key --recv-key EA50C866329648EE 
                pacman-key --lsign-key EA50C866329648EE 
		pacman -Syy
}
# }}}
		
install_desktop_environment() { # {{{

	if [[ "$DESKTOP_ENVIRONMENT" != '' ]]; then
		confirm_yes "Use default ($DESKTOP_ENVIRONMENT)"
		if [[ "$OPTION" == n ]]; then
			set_desktop_environment
		fi
		print_progress 'Installing X-Server (req. for Desktopenvironment, GPU Drivers, Keyboardlayout,...)'
	        install_package 'xorg xorg-xinit'
	else
		set_desktop_environment
	fi

	case "$DESKTOP_ENVIRONMENT" in
		KDE)     
		
echo -n "Which version of firefox do you want ? (esr/beta/nightly/developer-edition/kde-opensuse/fedora-wayland): "
read answer
if [ "$answer" = 'esr' ]
then
install_aur_package 'firefox-esr'

elif [ "$answer" = 'beta' ]
then
install_aur_package 'firefox-beta-bin-all-localizations'

elif [ "$answer" = 'nightly' ]
then
install_aur_package 'firefox-nightly'

elif [ "$answer" = 'developer-edition' ]
then
install_aur_package 'firefox-developer-edition'

elif [ "$answer" = 'kde-opensuse' ]
then
install_package 'firefox-kde-opensuse'

elif [ "$answer" = 'fedora-wayland' ]
then
install_aur_package 'fedora-firefox-wayland-bin'
fi
                        install_package 'plasma-desktop plasma-wayland-session dolphin' # minimum plasma DE
			install_package 'sddm' # display manager
			install_package 'ark' # archive
			install_package 'konsole yakuake' # terminal
			install_package 'bluedevil' # bluetooth for KDE
			install_package 'plasma-nm' # networkmanager for KDE
			install_package 'plasma-pa' # pulseaudio for KDE
			install_package 'kinfocenter neofetch' # see system information
			install_package 'spectacle' # screenshot utility
			install_package 'kcolorchooser' # color picker on desktop screen
			install_package 'sddm-kcm' # sddm config gui for KDE
			install_package 'qalculate-gtk' # calculator	
			install_package 'plasma-vault' # encryption
			install_package 'wget latte-dock qt5 kio-extras okular kdenlive plasma-browser-integration yarn powerdevil kde-gtk-config kio-gdrive kdeconnect kscreen' # like the package name say
	                install_package 'numlockx zeal python-pip unrar virtualbox-host-dkms vlc virtualbox virtualbox-guest-dkms sshfs bullet cgal glib-perl gstreamermm gtkmm3 gtksourceview3 gtksourceviewmm js185 libgtop libxml++ perl-switch system-config-printer cups libpng12 lib32-libpng12 blender xdg-user-dirs qt5-websockets qt5-svg ocl-icd opencl-driver conky glu telegram-desktop hplip gparted qbittorrent linux-headers lutris libretro-ppsspp libretro-citra libretro-mupen64plus-next steam obs-studio thunderbird dolphin-emu obs-studio' # Stuff
		        install_aur_package 'lib32-openssl-1.0 htmlcxx lib32-openal lib32-libcurl-compat lib32-libcurl-gnutls libcurl-gnutls' # Fix gog games, add LD_PRELOAD=libcurl.so.3 can fix some errors too 
			install_package 'discord godot spotify' #andontie-aur
		        sed -i 's/#MAKEFLAGS="-j2"/MAKEFLAGS="-j$(nproc)"/' /etc/makepkg.conf # Fix the slow speed compilation
                        mount -o remount,size=18G /tmp/ # Fix the needed space to build big packages such as emulators	
			wget https://github.com/DraGiuS/Yarock-PKGBUILD/releases/download/1.4.0/yarock-qt5-1.4.0-1-x86_64.pkg.tar.xz
			pacman -U yarock-qt5-1.4.0-1-x86_64.pkg.tar.xz
			rm *.pkg.tar.xz
			install_aur_package 'vgrive spotirec-git clonehero spicetify-cli gtk3-nocsd-git m64py rivalcfg stuntrally-bin brackets-bin soundnode-youtube-dl unityhub deezloader-remix-bin ludo ttf-raleway snapd xpadneo-dkms-git recbox-ardour-theme-git unity-editor-beta lgogdownloader mandelbulber2-opencl-git evesetup vscodium-bin plasma5-applets-volumewin7mixer ardour-git streamlink-twitch-gui pamac-aur yuzu-git citra-git cemu' # My stuff
                        systemctl start snapd.socket
                        cp /usr/share/ardour5/themes/recbox-ardour.colors /usr/share/ardour6/themes #Install ardour theme
			systemctl enable snapd.socket
			systemctl start snapd.socket
			systemctl enable org.cups.cupsd.service    
			sudo systemctl enable bluetooth.service
			sed -i 's/'#AutoEnable=false'/'AutoEnable=true'/g' /etc/bluetooth/main.conf

			setup_xinitrc 'startplasma-x11'
			;;
		XFCE)
			install_package 'xfce4 xfce4-goodies xarchiver'flatpak remote-add --user --no-gpg-verify chrome http://blog.kukuh.syafaat.id/google-chrome-flatpak-repo-testing/repo

			setup_xinitrc 'startxfce4'
			;;
		I3)
			install_package 'nitrogen' # wallpaper app
			install_package 'termite' # terminal
			install_aur_package 'polybar' # a highly customizable taskbar
			install_aur_package 'vtop' # a console task manager with vim-like shortcuts
			install_package 'ranger' # a console file manager
			install_package 'rofi' # menu to launch anything you want
			install_package 'gnome-calculator' # calculator
			install_package 'zathura' # pdf reader
			install_aur_package 'dunstify' # notification manager, like dunst but have --replace option https://github.com/NearHuscarl/dotfiles/blob/7ae6df76ca9f87a87bf68f2a38775e0ab9a4de04/bin/volume#L82
			install_package 'sxiv' # image viewer
			install_package 'compton' # compositor
			cp 30-touchpad.conf /etc/X11/xorg.conf.d/
			# Need to set up slim theme here


			setup_xinitrc 'i3'
			;;
	esac

	install_display_manager

	enter_to_continue
}
# }}}

