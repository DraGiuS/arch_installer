	mkdir Téléchargements
	mkdir Vidéos
	mkdir Android
	mkdir Aur
	chmod -R 777 Bureau Documents Jeux 'Github Projects' Images Téléchargements Vidéos Android Aur .conky .config
		
	enter_to_continue
}
